(executable
 (name main)
 (libraries oUnit oUnit2))

(rule
 (targets main.ml)
 (deps
  (glob_files {tests.ml,*tests.ml,*Tests.ml}))
 (action
  (with-stdout-to
   %{targets}
   (run ../../../src/bin/main.exe gen --framework ounit --sort --context))))

(alias
 (name runtest)
 (deps
  main.exe
  (file main.expected))
 (action
  (run diff -u main.expected main.ml)))
