(executable
 ((name main)
  (libraries (alcotest))))

(rule
 ((targets (main.ml))
  (deps ((glob_files tests.ml) (glob_files *tests.ml) (glob_files *Tests.ml)))
  (action (with-stdout-to ${@} (run dryunit gen
    --framework alcotest
    ;; --filter "space separated list"
    ;; --ignore "space separated list"
    ;; --ignore-path "space separated list"
  )))))

(alias
  ((name runtest)
   (deps (main.exe))
   (action (run ${<}))
  ))

(rule
  ((targets (model.ml))
  (deps ((file ../../src/model.ml)))
  (action (copy# ../../src/model.ml model.ml))))
